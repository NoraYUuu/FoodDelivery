.upload-wrap {
  background-color: var(--themeColor);
}
.upload-wrap .upload {
  height: 30vh;
  position: relative;
  margin-left: 5%;
  margin-bottom: 30rpx;
  width: 90%;
  background-color: #f1f1f1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5px;
}
.upload-wrap .upload .chooseImg {
  position: relative;
  width: 300rpx;
  height: 200rpx;
}
.upload-wrap .row-align {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  position: relative;
}
.upload-wrap .row-align .left {
  flex: 1;
  align-items: left;
  margin-left: 30rpx;
}
.upload-wrap .row-align .left .uploaded {
  font-size: small;
}
.upload-wrap .row-align .right {
  position: relative;
  align-items: center;
  margin-right: 30rpx;
}
.upload-wrap .row-align .right .in {
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
}
.info-wrap {
  background-color: var(--themeColor);
}
.info-wrap .column-align {
  display: flex;
  flex-direction: column;
}
.info-wrap .column-align .advice {
  text-align: left;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  margin-left: 200rpx;
  color: red;
}
.info-wrap .QRcode {
  margin-top: 50rpx;
  width: 100%;
  height: 500rpx;
  text-align: center;
}
.info-wrap .QRcode .code {
  width: 300rpx;
  height: 300rpx;
}
