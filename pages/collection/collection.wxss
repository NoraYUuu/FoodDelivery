/* tab切换 方法二 */
.nav_tab{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
 
}
.show{
  line-height:100rpx;
  text-align:center;
  flex:1;
  color:#000;
  font-size:28rpx;
  opacity: 0.5;
}
.hidden{
  line-height:100rpx;
  text-align:center;
  color:var(--themeColor);
  flex:1;
  font-size:28rpx;
}
.nav_underline{
  background:var(--themeColor);
  width:120rpx;
  height:5rpx;
  margin-top:-10rpx;
  margin-left:70rpx;
  border-radius:10rpx;
}
.tab_view{
  width:100%;
}
.createNew{
    height: 80rpx;
    width: 80rpx;
    position: fixed;
    margin: 0 10rpx;
    background: rgba(0,0,0,.3);
    bottom: 20rpx;
    right:20rpx;
    border-radius: 50%;
    z-index: 99;
}