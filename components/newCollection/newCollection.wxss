.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* 弹出层 */
.modalDlg{
  width: 95%;
  height: 95%;
  position: fixed;
  top: 20rpx;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  border-radius:5px;
  align-items: center;
}
.ok{
  display: inline-block;
  width: 80px;
  height: 35px;
  background: var(--themeColor);
  line-height: 35px;
  text-align: center;
  color: #fff;
  font-size: 15px;
  margin:200rpx 85rpx;
  border-radius: 100px;

}
.rImg{
  align-items: center;
  width: 750rpx;
  height: 200rpx;
  padding-right: 40rpx;
}

.tip-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid rgba(235, 235, 235, 1);
}

.left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.tip {
  width: 64rpx;
  line-height: 38rpx;
  text-align: center;
  background: rgba(245, 245, 245, 1);
  border-radius: 6px;

  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}
/* select time */
.cxj-menu {
  background-color: #f5f5f5;
  width: 750rpx;
  height: 80rpx;
  display: flex;
  flex-wrap: nowrap;
  font-size: 32rpx;
}
.cxj-menu .active image {
  transform: rotate(180deg);
  background: none;
}
.cxj-menu .active {
  background-color: #fff;
}
.flex-view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  overflow: hidden;
  display: block;
  text-align: center;
  line-height: 80rpx;
}

.cxj-icon {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin-left: 5px;
}

.cxj-content {
  width: 750rpx;
  font-size: 28rpx;
}

.cxj-content-li {
  line-height: 60rpx;
  text-align: center;
}

.cxj-tab-layout {
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  top: 80rpx;
  z-index: 100;
  border-bottom: solid 1px #eee;
  height: 100%;
  background-color: rgba(000,000,000,.5);
  
}

.cxj-tab-layout .active {
  color: var(--themeColor);
}

.cxj-tab-layout view {
  width: 750rpx;
  text-indent: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1rpx solid #e7e7e7;
  background-color:#ffffff;
}

.choose{
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  border-bottom: 2rpx solid rgba(235, 235, 235, 1);
}

.picker{
  margin-top: 25rpx;
}
